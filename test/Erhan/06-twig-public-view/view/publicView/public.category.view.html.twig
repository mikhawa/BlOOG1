{% extends 'template.view.html.twig' %}

{% block navbar %}			
	
    {{ parent() }}
	 
{% endblock %}

{% block section_slider %}

<section class="slider mt-4">
		<div class="container-fluid">
			<div class="row no-gutters">
				<div class="col-lg-12 col-sm-12 col-md-12 slider-wrap">
					<div class="slider-item">
						<div class="slider-item-content">

                        {% if category.getCategoryName is null %}                   
                            <h3>{{ "Aucun article n'a été trouvé" }}</h3>       
                        {% endif %}
							<div class="post-thumb mb-4">
								<a href="blog-single.html">
									<img src="images/slider/slider1.jpg" alt="" class="img-fluid">
								</a>
							</div>

							<div class="slider-post-content">
								<span class="cat-name text-color font-sm font-extra text-uppercase letter-spacing">Description</span>
								<h3 class="post-title mt-1">{{ category.getCategoryDescription}}</h3>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}

{% block section_articles %}

{% block section_articles1 %}

<section class="section-padding">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="row">

    {% for article in articles %}

    {% if article is null %}                   
            <h3>{{ "Aucun article n'a été trouvé" }}</h3>       
    {% endif %}

    <div class="col-lg-3 col-md-6">
        <article class="post-grid mb-5">
            <a class="post-thumb mb-4 d-block" href="blog-single.html">
                <img src="images/news/f1.jpg" alt="" class="img-fluid w-100">
            </a>

            <span class="cat-name text-color font-extra text-sm text-uppercase letter-spacing-1"><a href="?route=article&slug={{ article.getArticleSlug }}">{{ article.getArticleTitle }}</a></span>

            <h3 class="post-title mt-1">{{ article.getArticleText|length < 50 ? : article.getArticleText|slice(0, 60) ~ '' }}<a href="?route=article&slug={{ article.getArticleSlug }}">...Lire Plus</a></h3>

            <span class="text-muted letter-spacing text-uppercase font-sm">{{ article.getArticleDatePublish }} Par {{ article.getUser.getUserFullName }}</span>
            
 
        </article>
        </div>
    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}

{% endblock %}